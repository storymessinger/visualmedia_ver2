                        dl
                            dt News and Events
                            div.nav_list
                                dd
                                    a(href="/news") News
                                    a.disable Media Report
                                    a.disable VML LIfe
                        dl
                            dt Archive
                            div.nav_list
                                dd
                                    a(href="/archive/download") Download
