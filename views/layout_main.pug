                            div.nav_list
                                //- dd.open
                                dd
                                    //- a.nav_selected(href="/member/professor") Professor
                                    a(href="/member/professor") Professor
                                    a(href="/member/student") Student
                        dl
                            dt Research
                            div.nav_list
                                dd
                                    a(href="/project") Project
                                    a.disable Research Area
                                    a(href="/publication") Publication
                                    a(href="/publication/domestic") Publication(Domestic)
